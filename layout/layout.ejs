
<%

var pageTitle = (function() {
	var suffix = ' | ' + config.title + '[' + config.subtitle + ']';
	if (is_archive()) {
		if (is_year()) {
			return 'Archive: ' + page.year + suffix;
		}
		if (is_month()) {
			return 'Archive: ' + page.year + '/' + page.month + suffix;
		}
	}
	if (is_tag()) {
		return 'Tag: ' + page.tag + suffix;
	}
	if (is_category()) {
		return 'Category: ' + page.category + suffix;
	}
	return config.title + '[' + config.subtitle + ']' + ' - ' + config.description;
})();

%>

<!DOCTYPE html>
<html lang="<%=config.language%>">
<head>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0, user-scalable=no">
	<title><%=pageTitle%></title>
	<link href='http://fonts.googleapis.com/css?family=Martel:300,400,700' rel='stylesheet' type='text/css'>
	<% theme.stylesheets.forEach(function(url) { %>
		<link rel="stylesheet" href="<%=url%>">
	<% }); %>
</head>
<body>

<%-partial('partials/header')%>

<%- body %>

	<div id="bottom-outer">
		<div id="bottom-inner">
			Site by <%=config.author%> using
			<a href="http://hexo.io">hexo blog framework</a>.
			<br>
			<a href="<%=config.root%>">Home</a>
		</div>
	</div>

</body>
</html>
